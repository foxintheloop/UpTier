{
  "name": "@foxintheloop/uptier-shared",
  "version": "1.0.0",
  "description": "Shared types and constants for UpTier task management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema.sql": "./src/schema.sql"
  },
  "files": [
    "dist",
    "src/schema.sql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/foxintheloop/uptier.git",
    "directory": "packages/shared"
  },
  "license": "MIT",
  "keywords": [
    "uptier",
    "mcp",
    "task-management",
    "types"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "typescript": "^5.4.0"
  }
}
